<?xml version="1.0"?>
<robot name="planar_arm">
  <material name="blue"><color rgba="0.2 0.4 0.8 1"/></material>
  <material name="red"><color rgba="0.8 0.2 0.2 1"/></material>
  <material name="gray"><color rgba="0.5 0.5 0.5 1"/></material>
  <material name="dark"><color rgba="0.2 0.2 0.2 1"/></material>

  <!-- Base fixa -->
  <link name="base_link">
    <visual>
      <geometry><cylinder length="0.05" radius="0.06"/></geometry>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <material name="dark"/>
    </visual>
    <collision>
      <geometry><cylinder length="0.05" radius="0.06"/></geometry>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Elo 1: 0.35m de comprimento -->
  <link name="link1">
    <visual>
      <geometry><box size="0.35 0.04 0.03"/></geometry>
      <origin xyz="0.175 0 0" rpy="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry><box size="0.35 0.04 0.03"/></geometry>
      <origin xyz="0.175 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0.175 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link>

  <!-- Junta 1: Ombro (rotação em Z) -->
  <joint name="joint_shoulder" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="50" velocity="3"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

  <!-- Elo 2: 0.30m de comprimento -->
  <link name="link2">
    <visual>
      <geometry><box size="0.30 0.035 0.025"/></geometry>
      <origin xyz="0.15 0 0" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry><box size="0.30 0.035 0.025"/></geometry>
      <origin xyz="0.15 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0.15 0 0"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.003" iyz="0" izz="0.003"/>
    </inertial>
  </link>

  <!-- Junta 2: Cotovelo (rotação em Z) -->
  <joint name="joint_elbow" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.35 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="30" velocity="3"/>
    <dynamics damping="0.3" friction="0.1"/>
  </joint>

  <!-- Base da garra -->
  <link name="gripper_base">
    <visual>
      <geometry><box size="0.03 0.05 0.02"/></geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry><box size="0.03 0.05 0.02"/></geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Junta fixa: conecta elo 2 à base da garra -->
  <joint name="joint_gripper_base" type="fixed">
    <parent link="link2"/>
    <child link="gripper_base"/>
    <origin xyz="0.30 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Dedo esquerdo -->
  <link name="finger_left">
    <visual>
      <geometry><box size="0.04 0.01 0.015"/></geometry>
      <origin xyz="0.02 0 0" rpy="0 0 0"/>
      <material name="dark"/>
    </visual>
    <collision>
      <geometry><box size="0.04 0.01 0.015"/></geometry>
      <origin xyz="0.02 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Junta do dedo esquerdo (translação em Y) -->
  <joint name="joint_finger_left" type="prismatic">
    <parent link="gripper_base"/>
    <child link="finger_left"/>
    <origin xyz="0.015 0.02 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.02" upper="0.03" effort="20" velocity="0.5"/>
    <dynamics damping="0.1"/>
  </joint>

  <!-- Dedo direito -->
  <link name="finger_right">
    <visual>
      <geometry><box size="0.04 0.01 0.015"/></geometry>
      <origin xyz="0.02 0 0" rpy="0 0 0"/>
      <material name="dark"/>
    </visual>
    <collision>
      <geometry><box size="0.04 0.01 0.015"/></geometry>
      <origin xyz="0.02 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Junta do dedo direito (translação em Y) -->
  <joint name="joint_finger_right" type="prismatic">
    <parent link="gripper_base"/>
    <child link="finger_right"/>
    <origin xyz="0.015 -0.02 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.03" upper="0.02" effort="20" velocity="0.5"/>
    <dynamics damping="0.1"/>
  </joint>

</robot>
